---
import Marquee from "./ui/Marquee/marquee.astro";
import NumberTicker from "./ui/number-ticker";

interface Stat {
  name: string;
  number: number;
}

const stats: Stat[] = [
  { name: "Experience", number: 26 },
  { name: "Projects", number: 200 },
  { name: "Clients", number: 150 },
  { name: "Communities", number: 50 },
  { name: "Luxury Villas", number: 10 },
  { name: "Standard Villas", number: 50 },
  { name: "Budget Homes", number: 440 },
];
---

<div class="py-16 max-w-screen-xl mx-auto px-5">
  <h2
    class="text-4xl lg:text-5xl font-bold mx-auto text-center lg:leading-[58px] mb-6 max-w-4xl">
    Customers around India
  </h2>
  <div class="flex flex-wrap justify-center items-center gap-6 pb-10">
    {
      stats.map((item: any) => (
        <div class="flex pt-4 pb-4 pl-2 pr-2 flex-col items-center gap-1.5 w-40 md:w-56">
          <div class="flex gap-1.5 items-center">
            <NumberTicker
              value={item.number}
              className="text-3xl md:text-5xl font-bold"
              client:only>
              {/* <span class="inline-block tabular-nums text-black dark:text-white tracking-wider text-3xl font-bold">
                {item.number}
              </span> */}
            </NumberTicker>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="3"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-plus text-3xl font-black">
              <>
                <path d="M5 12h14" />
                <path d="M12 5v14" />
              </>
            </svg>
          </div>
          <h3 class="scroll-m-20 tracking-tight text-center text-xl font-normal">
            {item.name}
          </h3>
        </div>
      ))
    }
  </div>
  <Marquee />
</div>
