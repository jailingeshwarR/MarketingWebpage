---
// Import the Experience component from the external file and give it a unique name
import ExperienceComponent from './experience.tsx';

// Define the local Experience section
const experiences = [
  {
    num: 12,
    text: 'Years Of Experience',
  },
  {
    num: 85,
    text: 'Successful Projects',
  },
  {
    num: 15,
    text: 'Active Projects',
  },
  {
    num: 95,
    text: 'Happy Customers',
  },
];
---

<section class="w-full bg-gradient-to-r from-blue-200 to-white px-12 xl:px-0 mx-auto mt-[100px] lg:mt-[100px] py-[25px]">
  <div class="w-full max-w-[1200px] mx-auto text-center mb-1 mt-24">
    <h2 class="font-bold text-3xl lg:text-5xl text-gray-800 mb-4">Why Jayalakshmi interiors?</h2>
    <p class="text-lg text-slate-500">
      With years of experience and hundreds of delighted clients, we bring passion and expertise to every project.
    </p>
  </div>
  <div class="flex lg:justify-center items-center overflow-x-scroll no-scrollbar space-x-8">
    {
      experiences.map((exp, i) => (
        <div data-aos="fade-up">
          <ExperienceComponent text={exp.text} num={exp.num} i={i} client:load />
        </div>
      ))
    }
  </div>
</section>

<style>
    /* Hide scrollbar for Chrome, Safari and Opera */
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
  
    /* Hide scrollbar for IE, Edge and Firefox */
    .no-scrollbar {
        -ms-overflow-style: none;  /* IE and Edge */
        scrollbar-width: none;  /* Firefox */
    }

    .experience-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
</style>
