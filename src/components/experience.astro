---
import ExperienceComponent from './experience.tsx';

const experiences = [
  { num: 26, text: 'Years of Experience' },
  { num: 200, text: 'Completed Projects' },
  { num: 150, text: 'Happy Clients' },
  { num: 50, text: 'Gated Communities' },
  { num: 10, text: 'Luxury Villas' },
  { num: 50, text: 'Standard Villas' },
  { num: 100, text: 'Budget Homes' },
];
---

<section class="w-full bg-gradient-to-r from-blue-200 to-white px-12 xl:px-0 mx-auto mt-[100px] lg:mt-[100px] py-[25px]">
  <div class="w-full max-w-[1200px] mx-auto text-center mb-1 mt-24">
    <h2 class="font-bold text-3xl lg:text-5xl text-gray-800 mb-4">Why Jayalakshmi Interiors?</h2>
    <p class="text-lg text-slate-500">
      With years of experience and hundreds of delighted clients, we bring passion and expertise to every project.
    </p>
  </div>

  <div class="marquee-container overflow-hidden">
    <div class="marquee-content flex space-x-6">
      {experiences.map((exp, i) => (
        <div class="experience-card">
          <ExperienceComponent text={exp.text} num={exp.num} i={i} client:load />
        </div>
      ))}

      {experiences.map((exp, i) => (
        <div class="experience-card">
          <ExperienceComponent text={exp.text} num={exp.num} i={i} client:load />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .marquee-container {
    position: relative;
    overflow: hidden;
    white-space: nowrap;
  }

  .marquee-content {
    display: inline-flex;
    animation: marquee 20s linear infinite;
  }

  .experience-card {
    padding: 1rem;
    border-radius: 8px;
    background-color: rgba(255, 255, 255, 0.8);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    min-width: 200px; /* Desktop width */
  }

  .experience-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.2);
  }

  /* Responsive styles for mobile */
  @media (max-width: 600px) {
    .experience-card {
      min-width: 100px; /* Adjust for mobile */
      padding: 0.5rem; /* Smaller padding */
    }
  }

  @keyframes marquee {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); } /* Moves halfway across the duplicated content */
  }
</style>
