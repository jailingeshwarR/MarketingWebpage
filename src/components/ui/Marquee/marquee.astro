---
import MarqueeWrapper from "./marqueeWrapper";

const images = [
  "/images/marquee/fairyLand.png",
  "/images/marquee/RMCLogo.png",
  "/images/marquee/mayflower.png",
  "/images/marquee/fairyLand.png",
  "/images/marquee/Srivari Logo.png"
];
---

<MarqueeWrapper
  className="cursor-default"
  duration="12s"
  repeat={4}
  pauseOnHover={false}
  direction="left"
  client:only>
  {
    images.map((src, index) => (
      <img
        src={src}
        alt={`Marquee image ${index + 1}`}
        title={`Marquee image ${index + 1}`}
        class="ml-12 mr-12 h-16"
        loading="lazy"
        draggable="false"
      />
    ))
  }
</MarqueeWrapper>
