---
import Button from "./button.astro";
---

<form
  action="/api/add"
  method="POST"
  id="form"
  class="needs-validation p-6 bg-white rounded-lg shadow-lg max-w-lg mx-auto"
  
  needs-validation p-6 bg-white rounded-lg shadow-lg w-full
  novalidate>
  <div class="mb-5">
    <label for="name" class="block text-gray-700 font-medium">Full Name</label>
    <input
      id="name"
      type="text"
      placeholder="John Carter"
      required
      class="w-full px-4 py-3 border-2 rounded-md outline-none focus:border-orange-500"
      name="firstname"
    />
    <div class="empty-feedback text-red-400 text-sm mt-1">
      Please provide your full name.
    </div>
  </div>

  <div class="mb-5">
    <label for="email" class="block text-gray-700 font-medium">Email Address</label>
    <input
      id="email"
      type="email"
      placeholder="you@mail.com"
      required
      class="w-full px-4 py-3 border-2 rounded-md outline-none focus:border-orange-500"
      name="emailAddress"
    />
    <div class="empty-feedback text-red-400 text-sm mt-1">
      Please provide a valid email address.
    </div>
  </div>

  <div class="mb-5">
    <label for="phone" class="block text-gray-700 font-medium">Contact Number</label>
    <input
      id="phone"
      type="tel"
      placeholder="+91 9876543210"
      required
      class="w-full px-4 py-3 border-2 rounded-md outline-none focus:border-orange-500"
      name="phone"
    />
    <div class="empty-feedback text-red-400 text-sm mt-1">
      Please provide your contact number.
    </div>
  </div>

  <div class="mb-5">
    <label for="location" class="block text-gray-700 font-medium">Location</label>
    <input
      id="location"
      type="text"
      placeholder="Coimbatore"
      required
      class="w-full px-4 py-3 border-2 rounded-md outline-none focus:border-orange-500"
      name="location"
    />
    <div class="empty-feedback text-red-400 text-sm mt-1">
      Please provide your location.
    </div>
  </div>

  <Button type="submit" size="lg" block class="bg-orange-500 text-white px-6 py-3 rounded-md hover:bg-orange-600 w-full font-semibold">Get a Free Quote</Button>
  <div id="result" class="mt-3 text-center"></div>
</form>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :invalid {
    border-color: #dc3545;
  }
</style>


<script is:inline>
  const form = document.getElementById("form");
  const result = document.getElementById("result");

  form.addEventListener("submit", function (e) {
    e.preventDefault();
    form.classList.add("was-validated");

    if (!form.checkValidity()) {
      form.querySelectorAll(":invalid")[0].focus();
      return;
    }

    const formData = new FormData(form);
    const json = JSON.stringify(Object.fromEntries(formData));

    result.innerHTML = "Sending...";

    fetch("/api/add", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: json,
    })
      .then((response) => response.json())
      .then((data) => {
        result.innerHTML = "Thank you! Your quote request has been received.";
        result.classList.add("text-green-500");
      })
      .catch((error) => {
        result.innerHTML = "Something went wrong!";
        result.classList.add("text-red-500");
      })
      .finally(() => {
        form.reset();
        form.classList.remove("was-validated");
        setTimeout(() => {
          result.innerHTML = "";
        }, 5000);
      });
  });
</script>
