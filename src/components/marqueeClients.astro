---
// Array of image sources for the marquee
const images = [
  '/src/assets/marquee/bas4e.png',
  '/src/assets/marquee/brightbee.png',
  '/src/assets/marquee/edvanza.png',
  '/src/assets/marquee/gistimpact.png',
  '/src/assets/marquee/nowon.png',
  '/src/assets/marquee/planetsim.png',
  '/src/assets/marquee/properti.png',
];
---

<section class="w-full bg-white py-10">
  <div class="marquee-container overflow-hidden">
    <div class="marquee-content flex items-center">
      {images.map((src, index) => (
        <img
          src={src}
          alt={`Marquee image ${index + 1}`}
          class="ml-12 mr-12 h-16"
          loading="lazy"
          draggable="false"
        />
      ))}
      {images.map((src, index) => (
        <img
          src={src}
          alt={`Marquee image duplicate ${index + 1}`}
          class="ml-12 mr-12 h-16"
          loading="lazy"
          draggable="false"
        />
      ))}
    </div>
  </div>
</section>

<style>
  .marquee-container {
    position: relative;
    overflow: hidden;
    white-space: nowrap;
  }

  .marquee-content {
    display: inline-flex;
    animation: marquee 5s linear infinite;
  }

  @keyframes marquee {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); } /* Moves halfway across the duplicated content */
  }
</style>
