---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import Form from "./ui/form.astro";
---

<main
  class="grid grid-cols-1 lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-12 gap-8 bg-gradient-secondary text-black px-5">
  
  <div class="items-center flex flex-col lg:items-start">
    <h1 class="text-center lg:text-left text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter text-black">
      Transform Your Space with Jayalakshmi Interiors
    </h1>
    <p class="text-lg mt-4 text-slate-100 max-w-xl">
      Discover the beauty of personalized interior design from concept to completion. At Jayalakshmi Interiors, we craft spaces that reflect your style with transparent pricing and unmatched qualityâ€”all in Coimbatore.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/library"
        class="flex gap-1 items-center justify-center bg-black text-white px-6 py-3 rounded-md font-semibold shadow-lg hover:bg-gray-800 hover:border-2 transition-colors duration-200"
        rel="noopener">
        <Icon class="w-6 h-6 text-white" name="bx:caret-right" />
        <span>Explore Our Work</span>
      </Link>
    </div>
  </div>

  <div class="w-full max-w-lg md:order-1"> <!-- Adjusts position on larger screens -->
    <Form />
  </div>
</main>

<style>
  .bg-gradient-secondary {
    background-image: linear-gradient(106.21deg, #FF7A00 -1.55%, #FF3A29 100.85%);
  }
</style>
