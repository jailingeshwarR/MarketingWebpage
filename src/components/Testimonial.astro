---
import TestimonialSlider from "@layouts/function-components/TestimonialSlider";

const { testimonial } = Astro.props;
---

<h2 class="font-bold text-center text-3xl lg:text-4xl text-gray-800 tracking-wide w-full lg:max-w-[50%] pt-4 pb-2 mx-auto">
  <!-- Reduced padding-bottom (pb-6) to bring testimonials closer -->
  What People Think About Us
</h2>

<section class="reviews">
  <div class="container">
    <div class="row justify-between">
      <div class="lg:col-6">
        <h2>{testimonial.title}</h2>
      </div>
      <div class="lg:col-4">
        <p>
          {testimonial.description}
        </p>
      </div>
    </div>
    <div class="row mt-0 mb-2">
      <!-- Reduced top margin (mt-8) to bring slider closer to text above -->
      <div class="col-12">
        <!-- Passes testimonial list to the slider without rounded edges or shadow -->
        <TestimonialSlider list={testimonial.testimonial_list} client:load />
      </div>
    </div>
  </div>
</section>
