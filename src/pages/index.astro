---
import CounterComponent from "@components/CounterComponent.astro";
import Cta from "@components/cta.astro";
import Features from "@components/features.astro";
import Hero from "@components/hero.astro";
import Testimonial from "@components/Testimonial.astro";
import Layout from "@layouts/Layout.astro";
import { getEntryBySlug } from "astro:content";

const homepage = await getEntryBySlug("homepage", "index");
const { testimonial } = homepage.data;
const meta = {
  title: "Jayalakshmi Interiors - Transforming Spaces, Elevating Lifestyles",
  description:
    "Jayalakshmi Interiors crafts elegant, functional designs tailored to your style, blending modern aesthetics with traditional touches and expert craftsmanship.",
  useTitleTemplate: false,
};
---

<Layout {...meta}>
  <Hero />
  <Features />
  <CounterComponent />
  <Testimonial testimonial={testimonial} />
  <Cta />
</Layout>
