---
import GalleryLayout from '@components/GalleryLayout.astro';
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const albums = await getCollection("albums");
---

<Layout title="Gallery">
  <GalleryLayout>
    <div class="text-center">
      <h1 class="text-5xl font-bold">Photo Gallery</h1>
      <p class="text-xl my-4">Showcasing our finest designs and craftsmanship.</p>
    </div>
    <div class="mx-auto container max-w-screen-sm grid grid-cols-2 gap-8">
      {albums.map((item) => (
        <a href={`/gallery/${item.id}`} class="group block transition-all mb-4">
          {/* <div class="relative aspect-square overflow-hidden rounded-lg"> */}
            <Image
              src={item.data.cover}
              alt={item.data.title}
              format="avif"
              width={720}
              // height={720} <!-- Ensure fixed dimensions to prevent CLS -->
              quality="mid"
              class:list={[
                "rounded-lg transition-all",
                "group-hover:shadow-lg group-hover:opacity-90",
              ]}
              loading="lazy"
            />
          </div>
          <div class="mt-4 text-center text-neutral-800">
            <strong class="font-normal">{item.data.title}</strong>
            <p class="text-xs">{item.data.description}</p>
          </div>
        </a>
      ))}
    </div>
  </GalleryLayout>
</Layout>
