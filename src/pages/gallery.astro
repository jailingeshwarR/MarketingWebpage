---
import GalleryLayout from '@components/GalleryLayout.astro';
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";

const albums = await getCollection("albums");
---

<Layout title="Gallery">
  <GalleryLayout>
    <div class="text-center">
      <h1 class="text-5xl font-bold">Photo Gallery</h1>
      <p class="text-xl my-4">Showcasing our finest designs and craftsmanship.</p>
    </div>
    <div class="mx-auto container grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {albums.map((item) => (
        <a href={`/gallery/${item.id}`} class="group block transition-all mb-6">
          <div class="relative overflow-hidden rounded-xl shadow-md">
            <img
              src={item.data.cover}
              alt={item.data.title}
              width="720"
              height="720"
              class="rounded-xl transition-transform duration-300 group-hover:scale-105 group-hover:shadow-lg"
              loading="lazy"
            />
          </div>
          <div class="mt-4 text-center">
            <h3 class="text-lg font-semibold text-neutral-800">{item.data.title}</h3>
            <p class="text-sm text-neutral-600">{item.data.description}</p>
          </div>
        </a>
      ))}
    </div>
  </GalleryLayout>
</Layout>
